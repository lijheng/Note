<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FallingView">
        <attr name="flakeSrc" format="reference" />
        <attr name="flakeScale" format="integer" />
        <attr name="flakeDensity" format="integer" />
        <attr name="fallingDelay" format="integer" />
    </declare-styleable>

    <declare-styleable name="SimpleToolBar">
        <attr name="bottom_line" format="boolean" />
        <attr name="left_icon" format="reference" />
        <attr name="title" format="reference|string" />
        <attr name="title_textColor" format="reference|color" />
        <attr name="right_textSize" format="dimension|reference" />
        <attr name="right_textColor" format="reference|color" />
        <attr name="right_text" format="reference|string" />
        <attr name="right_src" format="reference" />
    </declare-styleable>

    <declare-styleable name="SimpleToolBar_Layout">
        <attr name="layout_gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="NoneCompressLayout_Layout">
        <attr name="complete" format="boolean" />
    </declare-styleable>
    <declare-styleable name="NoneCompressLayout">
        <attr name="android:gravity" format="enum">
            <enum name="center" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>
</resources>